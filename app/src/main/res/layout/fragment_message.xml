<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    tools:context=".ui.activity.scheduletab.ScheduleFragment">

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/img_chat_favoritetasker"
            />
        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhanh chóng kết nối với Tasker yêu thích để trao đổi trước khi đặt công việc!"
            android:layout_marginHorizontal="16dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/card_chat_tasker_favorite"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#EBEBEB"
            android:layout_marginBottom="4dp"
            >
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Chat cùng Tasker yêu thích"
                android:textColor="#2FA862"
                android:layout_gravity="center"
                android:padding="12dp"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>