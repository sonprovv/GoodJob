<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    tools:context=".ui.activity.upcomingtab.UpcomingFragment">

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/img_no_user_default"
            />
        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Công việc bạn đăng lên sẽ được hiển thị ở đây để bạn dễ dàng thao tác và quản lý. Bạn có thể xem lại lịch sử những công việc đã được hoàn thành ở mục Lịch sử nằm ở góc bên phải"
            android:layout_marginHorizontal="16dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_button_login"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#2FA862"
            >
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Đăng nhập ngay"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:padding="12dp"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>