<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="24dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/bg_border_notitab"
    android:layout_marginHorizontal="12dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bell"
            />
        <TextView
            android:layout_marginStart="12dp"
            android:layout_width="0dp"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Vui lòng luôn bật thông báo để không bỏ lỡ bất kỳ thông tin quan trọng nào về công việc."
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="16dp"
        android:gravity="end"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_marginHorizontal="8dp"
            android:id="@+id/card_view_delay"
            android:layout_marginBottom="4dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#EBEBEB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Để sau"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#2FA862"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginHorizontal="8dp"
            android:id="@+id/card_view_ok_noti"
            android:layout_marginBottom="4dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#2FA862"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mở thông báo"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>